<div class="card m-2" id="comments-new">
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label class="form-label">닉네임</label>
                <input type="text" class="form-control" id="new-comment-nickname">
            </div>
            <div class="mb-3">
                <label class="form-label">댓글</label>
                <textarea type="text" class="form-control" rows="3" id="new-comment-body"></textarea>
            </div>
            {{#data}}
                <input type="hidden" id="new-comment-article-id" value="{{id}}">
            {{/data}}
            <button type="button" class="btn btn-primary" id="comment-create-btn">댓글 작성</button>
        </form>
    </div>
</div>

<!--스크립트를 활용한 버튼 기능 구현 -->
<script>
    {
        const commentCreateBtn = document.querySelector("#comment-create-btn");
         // 특정 요소가 이벤트를 감지하도록 처리하는 함수 (이벤트 타입, 이벤트 처리 함수)
        commentCreateBtn.addEventListener("click", function() {console.log("버튼 클릭");

        //객체 리터럴 방식 - 객체를 변수로 선언해서 사용
        // var 변수 = {키:값, 키:값, ....}
        const comment = {
            nickname : document.querySelector("#new-comment-nickname").value,
            body : document.querySelector("#new-comment-body").value,
            article_id : document.querySelector("#new-comment-article-id").value
        };

        console.log(comment);

        //post 요청 만들기
        const url = "/articles/" + comment.article_id + "/comments";
        fetch(url, {
            method : "POST",
            headers : {
                "Content-Type" : "application/json"
            },
            body : JSON.stringify(comment)
            }).then(response => {
                const msg = (response.ok) ? "댓글이 등록됐습니다." : "댓글 등록 실패..!";
                alert(msg);
                 window.location.reload();
            });
        });
    }
</script>