{{>layouts/header}}
<form class="container" action="/articles/edit" method="post">
    <input type="hidden" name="id" value="{{article.id}}" />
    <div class="mb-3">
        <label class="form-label">제목</label><br>
        <input class="form-control" type="text" name="title" value="{{article.title}}" />
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label><br>
        <textarea class="form-control"  name="content" rows="3">{{article.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-binary">수정 완료</button>
</form>
<a href="/articles/index">목록으로 가기</a>
{{>layouts/footer}}
